@model Project_Management_Tool.Models.User



@{
    ViewBag.Title = "Login";
    dynamic message = ViewBag.Message;
}

<div class="container">
    <div class="row">

        @using (Html.BeginForm(new {  @role = "form" }))
        {
            <div class="col-md-8">
                <h3 class="section-title">Enter Your Login Information</h3>
                <hr><br><br>

                @if (message != null)
                {
                    <div class="well well-lg field-validation-error">
                        @message
                    </div>
                }
                





                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = " Email Address" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>

                <div class="form-group">
                    <label>Password</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Your Password" })
                    @Html.ValidationMessageFor(model => model.Password)

                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </div>
        }

    </div>
</div>


@section Scripts{
    
    
    
<script src="~/Scripts/jquery.validate.min.js"></script>
    
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}